<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:id="@+id/night_background"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:background="@drawable/home_background3"

        app:bottom_left_corner_radius="17dp"
        app:bottom_right_corner_radius="17dp">

        <TextView
            android:id="@+id/home_greg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#ffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/home_hijri_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="hijri time"
            android:layout_gravity="center"
            android:textColor="#FFFF"
            android:textSize="30sp" />
        <!--Location checking-->
        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto-location "
                android:textColor="#FFFF"
                android:textSize="25sp"/>
            <ImageView
                android:id="@+id/update_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"

                android:src="@drawable/synchronize"/>



        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>
    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

    <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="15dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        app:bottom_right_corner_radius="30dp"
        app:top_left_corner_radius="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@drawable/clock" />

        <LinearLayout
            android:id="@+id/home_current_prayer"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_current_prayer_name"
                android:layout_width="127dp"
                android:layout_height="36dp"
                android:layout_marginTop="15dp"
                android:text="Current"
                android:textColor="#00ae3f"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_prayer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-5dp"
                android:text="00:00 Pm"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_next_prayer"
                android:layout_width="127dp"
                android:layout_height="36dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Next Prayer"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/home_next_prayer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="Maghrib 7:00 Pm"
                android:textColor="#00ae3f"
                android:textSize="15sp" />
        </LinearLayout>
    </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">


        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/border">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/quran_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quran"
                android:textColor="#00ae3f"
                android:textSize="20sp"/>

        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/border_2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/dua_hands" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dua"
                android:textColor="#00ae3f"
                android:textSize="20sp"/>

        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/border">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/allah_word" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99 Names"
                android:textColor="#00ae3f"
                android:textSize="20sp"/>

        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">


        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/border">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/open_book" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hadith"
                android:textColor="#00ae3f"
                android:textSize="20sp"/>

        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/border_2">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/tasbih" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasbih"
                android:textColor="#00ae3f"
                android:textSize="20sp"/>

        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

        <com.jcminarro.roundkornerlayout.RoundKornerLinearLayout
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/border">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/calculator" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zakat"
                android:textColor="#00ae3f"
                android:textSize="20sp"/>

        </com.jcminarro.roundkornerlayout.RoundKornerLinearLayout>

    </LinearLayout>

</LinearLayout>