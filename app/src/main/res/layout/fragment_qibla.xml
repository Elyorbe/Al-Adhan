<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_azimuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_margin="30dp"
        android:text="0"
        android:textSize="40sp"
        android:textColor="#000" />
    <ImageView
        android:id="@+id/img_compass"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_centerVertical="true"
        android:src="@drawable/compass"
        android:layout_below="@id/txt_azimuth" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/approx_qibla_direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_compass"
        android:text="Approximate Qibla Direction in "
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/approx_qibla_direction"
        android:textAlignment="center"
        android:textColor="#000"
        android:text="City"
        android:textSize="20sp"/>

</RelativeLayout>